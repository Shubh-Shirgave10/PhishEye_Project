{
    "manifest_version": 3,
    "name": "PhishEye - AI Phishing Detector",
    "version": "1.0",
    "description": "Real-time AI-powered phishing detection extension",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}